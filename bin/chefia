#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
require 'iamspe'

# Moficar ARGV para substituir 'porta' por 'chefia'
ARGV.delete 'porta'
ARGV.push('chefia') unless ARGV.include?('chefia')

# Tentar limpar a tela
system 'clear' || system 'cls'
# Iniciar o comando apropriado
cmd = Iamspe::Starter.new
cmd.parse(ARGV)
cmd.run
